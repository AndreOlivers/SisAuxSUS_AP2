@model SisAuxSUS_AP2.Models.ViewModel.PacientesViewModel

@{
    ViewData["Title"] = "ListaPacientes";
}



<head>
<link rel="stylesheet" href="~/css/Login/style.css" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>

<header>
    <div>
        <nav class="navbar navbar-expand-xl navbar-light bg-light ">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/css/imagens/covid_icon.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                    SisSus
                </a>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav nav-fill w-75">
                        <a class="nav-link active" aria-current="page" href="/Usuarios/Dados">Pagina Inicial</a>
                        <a class="nav-link" href="/Pacientes/Create">Analisar Paciente</a>
                        <a class="nav-link" href="https://vacinometro.sms.fortaleza.ce.gov.br/">Vacinômetro</a>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>
<h2>Dados Paciente</h2>
<div>
    <a asp-action="Dados" asp-controller="Usuarios" class="btn btn-outline-success">Voltar ao Início</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                Nome
            </th>
            <th>
                Idade
            </th>
            <th>
                Cidade
            </th>
            <th>
                Tipos de sintomas
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pacientes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeDoPaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdadeDoPaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CidadeDoPaciente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDeSintoma)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-success">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
