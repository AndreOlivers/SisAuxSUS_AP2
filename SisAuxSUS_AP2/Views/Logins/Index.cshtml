@model SisAuxSUS_AP2.Models.LoginVM

@{
    ViewData["Title"] = "Index";
}

<h1>Login</h1>
<hr />
<form asp-action="Index" asp-anti-forgery="true" method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" name="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" name="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br>
    <div class="form-group">
        <input asp-action="Dados" asp-controller="Pacientes" type="submit" class="btn btn-sm btn-outline-success" value="Entrar" />
    </div>
    <br>
    <div>
        <a asp-action="Index">Esqueceu sua senha?</a>
        @Html.ActionLink("Cadastre-se", "Create", "Usuarios", null, new { @class = "btn btn-outline-success form-group" })
    </div>
</form>
