@model SisAuxSUS_AP2.Models.LoginVM

@{ ViewData["Title"] = "Index"; }
<head>
    <link rel="stylesheet" href="~/css/Login/style.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
</head>

<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="~/css/Imagens/coronavirus.lightbox.png" class="brand_logo" alt="Logo" width="150">
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">
                <form>
                    <h3 class="mb-3 col text-center">Login</h3>
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                        </div>
                        <input asp-for="Email" name="Email" type="email" class="form-control input_user" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                        </div>
                        <input asp-for="Senha" name="Senha" type="password" class="form-control input_pass" placeholder="Senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button asp-action="Dados" asp-controller="Usuarios" type="submit" name="button" class="btn login_btn">
                            Login
                            <i class="bi bi-arrow-right-short"></i>
                        </button>
                    </div>
                </form>
            </div>

            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    Não tem uma conta? @Html.ActionLink("Cadastre-se", "Create", "Usuarios", null)
                </div>
                <div class="d-flex justify-content-center links">
                    <a href="#">Esqueceu a Senha?</a>
                </div>
            </div>
        </div>
    </div>
</div>